{% extends 'base.html.twig' %}

{% block title %}{{ designer.name }} | 3DWWM{% endblock %}

{% block content %}
    <section class="flex display-designer">
        <div class="profil-designer">
            <img src="/uploads/designers/{{ designer.image }}" alt="{{ designer.name }}" class="image-designer">
            <h2>{{ designer.name }}</h2>
            <a href="{{ designer.link }}" target="_blank" class="link">Thingiverse</a>
        </div>
        <div>
            <h1 class="title">Modèle(s)</h1>
            <hr>
            <br>
            {% for product in designer.products %}
                <div>
                    <a href="{{ path('app_frontend_product_display', {slug: product.slug}) }}">
                        <img src="/uploads/products/{{ product.image }}" alt="{{ product.name }}">
                    </a>
                    <div class="card-product-display-designer">
                        <h3>{{ product.name }}</h3>
                        <span>{{ (product.price / 100) | number_format(2, ',', '.') }}€</span>
                    </div>
                </div>
            {% endfor %}
    </section>
{% endblock %}
