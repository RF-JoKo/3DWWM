{% extends 'base.html.twig' %}

{% block title %}Panier | 3DWWM{% endblock %}

{% block content %}
    <h1>MON PANIER</h1>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Produit</th>
                <th scope="col"></th>
                <th scope="col">Quantité</th>
                <th scope="col">Prix</th>
                <th scope="col">Total</th>
            </tr>
        </thead>
        <tbody>
            {% set total = null %}
            {% for element in cart %}
            <tr>
                <th>
                    <img src="/uploads/products/{{ element.product.image() }}" alt="{{ element.product.name() }}" height="75px">
                </th>
                <td>{{ element.product.name() }}</td>
                <td>{{ element.quantity }}</td>
                <td>{{ (element.product.price() / 100) | number_format(2, ',', '.') }}€</td>
                <td>{{ ((element.product.price() / 100) * element.quantity) | number_format(2, ',', '.') }}€</td>
            </tr>
                {% set total = total + (element.product.price * element.quantity) %}
            {% endfor %}
        </tbody>
    </table>
    <div class="text-right mb-5">
        <p>Nombre de produit : {{ cart|length }}</p>
        <p>Total de mon panier : {{ (total / 100)|number_format(2, ',', '.') }}€</p>
        <a href="#" class="btn btn-primary">Valider le panier</a>
    </div>
{% endblock %}
